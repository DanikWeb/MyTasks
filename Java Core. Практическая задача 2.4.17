public static void printOddNumbers(int[] arr) {
    StringBuilder sb = new StringBuilder();
    for (int i = 0; i < arr.length; i++) {
        if (Math.abs(arr[i]) % 2 == 1) {
            sb.append(arr[i]);
            sb.append(",");
        }
    }
    if (sb.length() > 0) {
        sb.deleteCharAt(sb.lastIndexOf(","));
    }
    System.out.println(sb);
}
